{
  "manifest_version": 2,
  "name": "Daily.dev Extension",
  "version": "1.0",
  "description": "A Chrome extension for daily.dev",
  "permissions": [
    "https://api.daily.dev/",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
